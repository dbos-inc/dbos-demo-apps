<!DOCTYPE html>
<html>
<head>
  <title>Fulfillment Dashboard</title>
    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            background-color: #f5f5f5;
            font-family: Arial, sans-serif;
        }

        .h1 {
          color: #333;
        }

        .form {
          margin-top: 10px;
        }

        .button-container {
            display: flex;
            justify-content: center;
            gap: 20px;
        }

        .button {
            background-color: #4CAF50;
            border: none;
            color: white;
            padding: 25px 50px;
            text-align: center;
            text-decoration: none;
            font-size: 22px;
            cursor: pointer;
            border-radius: 10px;
            transition: background-color 0.3s, box-shadow 0.3s;
        }

        .button:hover {
            box-shadow: 0 5px 15px 0 rgba(0,0,0,0.2);
        }

        .cleanorders-button {
            background-color: #58abf3;
        }

        .cleanorders-button:hover {
            background-color: #48536b;
        }

        .cleanstaff-button {
            background-color: #edfa9f;
            color: #222938;
        }

        .cleanstaff-button:hover {
            background-color: #48536b;
        }

        .container {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 20px;
        }

        .logo {
            width: 200px;
            height: auto;
        }

        .product {
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 20px;
            margin: 20px 0;
            width: 80%;
            max-width: 600px;
            text-align: center;
        }

        .product img {
            max-width: 60%;
            height: auto;
            border-radius: 8px;
        }

        .form-text {
            font-size: 24px;
            color: #333;
            margin: 20px 0;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        .status-fulfilled {
            background-color: #48536b;
            color: white;
        }
        .status-waiting {
            background-color: #58abf3;
            color: white;
        }
        .status-packing {
            background-color: #edfa9f;
            color: #222938;
        }
    </style>
</head>
<body>
  <div class="container">
      <img src="https://dbos-blog-posts.s3.us-west-1.amazonaws.com/logos/black_logotype%2Btransparent_bg_h4000px.png" alt="DBOS Logo" class="logo">
      <div class="product">
          <h1>Orders</h1>
          {% assign status_lookup_arr = "entered,fulfilled,waiting,packing" | split: "," %}
            <table>
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Order</th>
                        <th>Packer</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    {% for order in orders %}
                    {% assign status_string = status_lookup_arr[order.order_status] %}
                    <tr>
                        <td>{{ order.order_id }}</td>
                        <td>{{ order.product }}</td>
                        <td>{{ order.packer_name }}</td>
                        <td class="status-{{ status_string | downcase }}">{{ status_string }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>  
          <h1>Packers</h1>
            <table>
                <thead>
                    <tr>
                        <th>Packer Name</th>
                        <th>Order ID</th>
                        <th>Time Left</th>
                    </tr>
                </thead>
                <tbody>
                    {% for packer in packers %}
                    <tr>
                        <td>{{ packer.packer_name }}</td>
                        <td>{{ packer.order_id }}</td>
                        <td>{{ packer.timeLeft }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>  
          <div class="button-container">
            <form action="/dashboard/cleanorders" method="POST">
              <button class="button cleanorders-button" type="submit">Clear Shipped Orders</button>
            </form>
            <form action="/dashboard/cleanstaff" method="POST">
              <button class="button cleanstaff-button" type="submit">Clear Inactive Packers</button>
            </form>
          </div>
      </div>
  </div>
  <div>
      <a href="/">Let's get to work!</a>
  </div>
  <div>
      <a href="/crash">I'm feeling mischevious!</a>
  </div>
    <script>
    setTimeout(() => {
      window.location.href = `dashboard`;
    }, 2000);
  </script>
</body>
</html>
